#include <iostream>  // Including iostream that lets you use IO in console
using namespace std; // Indicating that we're using the standard namespace

int main()  // Essential to every programme
{

	int x = 12;  // Initialising variables
	int y = 8;
	int choice; // Variable to save user's input.

	cout << "The value of x is " << x << endl;  // Output value of x
	cout << "The value of y is " << y << endl;  // Output value of y
	cout << "Press '1' to add x and y OR '2' to subtract y from x OR '3' to multiple x by y" << endl;
	cin >> choice;

	if (choice == 1) {
		cout << "The result is " << x + y << endl;
	}

	if (choice == 2) {
		cout << "The result is " << x - y << endl;
	}

	if (choice == 3) {
		cout << "The result is " << x * y << endl;
	}

	return 0;

}
